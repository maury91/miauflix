{
  "name": "@miauflix/frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc --project tsconfig.app.json && npm run build:ssr",
    "build:ssr": "npm run clear && tsx build-ssr.ts",
    "clear": "rimraf ../dist/frontend ../dist/frontend-ssr node_modules/.vite node_modules/.cache .vite tsconfig.tsbuildinfo",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "start": "npm run build:ssr && vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test --grep-invert \"Storybook\"",
    "test:e2e:ui": "playwright test --ui --grep-invert \"Storybook\"",
    "test:e2e:headed": "playwright test --headed --grep-invert \"Storybook\"",
    "test:e2e:debug": "playwright test --debug --grep-invert \"Storybook\"",
    "test:visual": "playwright test --project=storybook-chromium",
    "test:visual:update": "playwright test --project=storybook-chromium --update-snapshots",
    "test:visual:ui": "playwright test --project=storybook-chromium --ui",
    "test:visual:debug": "playwright test --project=storybook-chromium --debug",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@dicebear/collection": "^7.0.5",
    "@dicebear/core": "^7.0.5",
    "@miauflix/backend-client": "*",
    "@noriginmedia/norigin-spatial-navigation": "^2.0.1",
    "@playwright/test": "^1.54.2",
    "@reduxjs/toolkit": "^2.8.2",
    "@svgr/plugin-jsx": "^8.1.0",
    "@types/video.js": "^7.3.58",
    "framer-motion": "^10.16.4",
    "gsap": "^3.12.2",
    "playwright": "^1.54.2",
    "pluralize": "^8.0.0",
    "qrcode.react": "^4.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-qr-code": "^2.0.12",
    "react-redux": "^8.1.3",
    "styled-components": "^6.1.1",
    "video.js": "^8.23.3"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.0",
    "@iconify/json": "^2.2.358",
    "@storybook/addon-a11y": "^9.1.1",
    "@storybook/addon-docs": "^9.1.1",
    "@storybook/addon-onboarding": "^9.1.1",
    "@storybook/addon-vitest": "^9.1.1",
    "@storybook/react-vite": "^9.1.1",
    "@svgr/core": "^8.1.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@types/jsdom": "^21.1.7",
    "@types/pluralize": "^0.0.32",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/styled-components": "^5.1.34",
    "@vitejs/plugin-react": "^4.1.0",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint-plugin-storybook": "^9.1.1",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "rimraf": "^6.0.1",
    "sass": "^1.69.5",
    "storybook": "^9.1.1",
    "ts-jest": "^29.1.1",
    "tsx": "^4.20.3",
    "unplugin-icons": "^0.17.4",
    "vite": "^7.0.6",
    "vitest": "^3.2.4"
  }
}
