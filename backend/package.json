{
  "name": "miauflix-backend",
  "version": "1.0.0",
  "main": "src/app.ts",
  "scripts": {
    "start": "node --env-file ../.env --experimental-specifier-resolution=node --loader ./loader.js  src/app.ts",
    "start:prod": "node --env-file ../.env dist/app.js",
    "dev": "npm start --watch",
    "config": "npm start -- --config",
    "config-only": "npm start -- --only-config",
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json --resolve-full-paths",
    "build:client": "dts-bundle-generator ./src/client.ts -o ../dist/backend-client/index.d.ts --external-imports hono --no-check --verbose",
    "check:ts": "tsc --noEmit",
    "lint": "eslint --ext .ts src/",
    "test": "jest"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.2",
    "@hono/zod-validator": "^0.5.0",
    "@inquirer/prompts": "^7.4.0",
    "@keyv/sqlite": "^4.0.1",
    "@miauflix/source-metadata-extractor": "*",
    "@miauflix/therarbg-sanitizer": "*",
    "@miauflix/yts-sanitizer": "*",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.62.0",
    "@opentelemetry/resources": "^2.0.1",
    "@opentelemetry/sdk-metrics": "^2.0.1",
    "@opentelemetry/sdk-node": "^0.203.0",
    "@opentelemetry/sdk-trace-node": "^2.0.1",
    "@opentelemetry/semantic-conventions": "^1.36.0",
    "bcrypt": "^5.1.1",
    "cache-manager": "^6.4.1",
    "cacheable": "^1.8.9",
    "chalk": "^5.4.1",
    "dotenv": "^16.0.3",
    "hono": "^4.7.10",
    "jose": "^6.0.10",
    "keyv": "^5.3.1",
    "node-fetch": "^3.2.10",
    "parse-torrent": "^11.0.18",
    "sqlite3": "^5.0.11",
    "streamx": "^2.22.1",
    "thunky": "^1.1.0",
    "typeorm": "^0.3.10",
    "uuid": "^11.1.0",
    "webtorrent": "^2.6.7",
    "zod": "^3.25.20"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.27.2",
    "@faker-js/faker": "^8.4.1",
    "@swc-node/register": "^1.10.10",
    "@tsconfig/node20": "20.1.5",
    "@types/bcrypt": "^5.0.2",
    "@types/cache-manager": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node-fetch": "^3.0.3",
    "@types/streamx": "^2.9.5",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "babel-jest": "^29.7.0",
    "dts-bundle-generator": "^9.5.1",
    "eslint": "^9.24.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jest": "^29.7.0",
    "nodemon": "^2.0.20",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "4.2.0",
    "tsx": "^4.19.4",
    "typed-emitter": "^2.1.0",
    "typescript": "^5.8.3"
  },
  "type": "module"
}
