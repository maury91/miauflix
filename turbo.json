{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["tsconfig.json"],
  "tasks": {
    "@miauflix/backend#build": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "tsconfig*.json",
        "loader.js",
        "babel.config.js",
        "package.json",
        "!src/**/*.{test,spec}.{ts,tsx}",
        "!src/{__test-utils__,__mocks__}/**"
      ],
      "outputs": ["dist/**"],
      "cache": true
    },
    "@miauflix/backend#build:client": {
      "dependsOn": ["@miauflix/backend#build", "^build"],
      "inputs": [
        "src/client.ts",
        "src/routes/**/*.ts",
        "src/entities/**/*.ts",
        "src/dto/**/*.ts",
        "src/services/**/*.types.ts",
        "src/services/**/*.service.ts",
        "src/services/**/*.api.ts",
        "src/types/**/*.ts",
        "tsconfig*.json",
        "package.json",
        "!src/**/*.{test,spec}.{ts,tsx}",
        "!src/{__test-utils__,__mocks__}/**"
      ],
      "outputs": ["dist/client/**"],
      "cache": true
    },
    "@miauflix/frontend#build": {
      "dependsOn": ["@miauflix/backend#build:client", "^build"],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.css",
        "src/**/*.scss",
        "index.html",
        "global.d.ts",
        "vite.config.ts",
        "vite.ssr.config.ts",
        "build-ssr.ts",
        "tsconfig*.json",
        "package.json",
        "!src/**/*.{test,spec}.{ts,tsx}",
        "!src/{__test-utils__,__mocks__}/**"
      ],
      "outputs": ["../dist/frontend/**", "../dist/frontend-ssr/**"],
      "env": ["NODE_ENV", "VITE_API_URL", "VITE_TIZEN"],
      "cache": true
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "tsconfig*.json",
        "package.json",
        "!src/**/*.{test,spec}.{ts,tsx}",
        "!src/{__test-utils__,__mocks__}/**"
      ],
      "outputs": ["dist/**"],
      "cache": true
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.test.ts",
        "src/**/*.test.tsx",
        "src/**/*.spec.ts",
        "src/**/*.spec.tsx",
        "jest.config.*",
        "jest.setup.ts",
        "vitest.config.*",
        "setupTests.ts",
        "babel.config.js",
        "tsconfig*.json",
        "package.json",
        "!e2e/**",
        "!**/*.e2e.spec.ts",
        "!**/*.e2e.test.ts"
      ],
      "outputs": ["coverage/**"],
      "cache": true
    },
    "lint": {
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        ".eslintrc.*",
        "eslint.config.*",
        "../eslint.config.*",
        "../../eslint.config.*",
        "babel.config.js",
        "tsconfig*.json",
        "package.json"
      ],
      "outputs": [],
      "cache": true
    },
    "check:ts": {
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "tsconfig*.json", "package.json"],
      "outputs": [],
      "cache": true
    },
    "format": {
      "outputs": [],
      "cache": false
    },
    "format:check": {
      "outputs": [],
      "cache": false
    }
  }
}
