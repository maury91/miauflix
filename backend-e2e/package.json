{
  "name": "miauflix-backend-e2e",
  "version": "1.0.0",
  "description": "End-to-end integration tests for Miauflix backend",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:debug": "node --inspect-brk=0.0.0.0:9229 node_modules/.bin/jest --runInBand",
    "test:only": "./scripts/test-only.sh",
    "dev": "./scripts/env.sh dev",
    "dev:detached": "./scripts/env.sh dev -d",
    "dev:stop": "./scripts/stop.sh",
    "clean": "docker compose -f docker/docker-compose.test.yml down -v --remove-orphans && docker compose -f docker/docker-compose.dev.yml down -v --remove-orphans"
  },
  "devDependencies": {
    "@types/jest": "30.0.0",
    "@types/node": "22.0.0",
    "jest": "30.0.5",
    "ts-jest": "29.4.1",
    "typescript": "5.9.2"
  },
  "dependencies": {
    "@miauflix/yts-sanitizer": "file:../packages/yts-sanitizer",
    "@miauflix/backend": "file:../backend",
    "@miauflix/therarbg-sanitizer": "file:../packages/therarbg-sanitizer",
    "hono": "4.10.6",
    "sqlite3": "5.1.7"
  },
  "type": "module",
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "useESM": true
        }
      ],
      "^.+\\.js$": [
        "babel-jest",
        {
          "presets": [
            [
              "@babel/preset-env",
              {
                "targets": {
                  "node": "current"
                },
                "modules": "auto"
              }
            ]
          ]
        }
      ]
    },
    "testMatch": [
      "**/tests/**/*.test.ts",
      "**/src/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/*.test.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/test-setup.ts"
    ],
    "testTimeout": 30000,
    "transformIgnorePatterns": [
      "node_modules/(?!(@miauflix/backend|hono)/)",
      "<rootDir>/../backend/dist/client/(?!index\\.js$)"
    ],
    "moduleNameMapper": {
      "^@miauflix/backend$": "<rootDir>/../backend/dist/client/index.js"
    }
  }
}
