{
  "name": "miauflix-backend-e2e",
  "version": "1.0.0",
  "description": "End-to-end integration tests for Miauflix backend",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:debug": "node --inspect-brk=0.0.0.0:9229 node_modules/.bin/jest --runInBand",
    "test:only": "./scripts/test-only.sh",
    "dev": "./scripts/env.sh dev",
    "dev:detached": "./scripts/env.sh dev -d",
    "dev:stop": "./scripts/stop.sh",
    "clean": "docker compose -f docker/docker-compose.test.yml down -v --remove-orphans && docker compose -f docker/docker-compose.dev.yml down -v --remove-orphans"
  },
  "devDependencies": {
    "@types/jest": "30.0.0",
    "@types/node": "22.0.0",
    "jest": "30.0.5",
    "ts-jest": "29.4.1",
    "typescript": "5.9.2"
  },
  "dependencies": {
    "@miauflix/yts-sanitizer": "file:../packages/yts-sanitizer",
    "@miauflix/backend-client": "file:../packages/backend-client",
    "@miauflix/therarbg-sanitizer": "file:../packages/therarbg-sanitizer",
    "hono": "4.9.2",
    "sqlite3": "5.1.7"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts",
      "**/src/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/*.test.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/test-setup.ts"
    ],
    "testTimeout": 30000,
    "transformIgnorePatterns": [
      "node_modules/(?!(@miauflix/backend-client|hono)/)"
    ],
    "moduleNameMapper": {
      "^@miauflix/backend-client$": "<rootDir>/../packages/backend-client/src/index.ts"
    }
  }
}
