{
  "name": "@miauflix/therarbg-sanitizer",
  "version": "1.0.0",
  "description": "A shared library for sanitizing TheRARBG API data across Miauflix projects",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "lint": "eslint .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist coverage",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "therarbg",
    "sanitizer",
    "testing",
    "miauflix",
    "torrent",
    "fake-data"
  ],
  "author": "Miauflix Team",
  "license": "MIT",
  "dependencies": {
    "@faker-js/faker": "10.1.0",
    "@miauflix/source-metadata-extractor": "*"
  },
  "devDependencies": {
    "@types/node": "22.19.1",
    "ts-jest": "29.4.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.test.ts",
      "!src/**/*.d.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
